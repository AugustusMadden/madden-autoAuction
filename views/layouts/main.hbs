<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auto Auction</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.1.3/flatly/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/app.css">
  </head>
  <body class="mx-auto">
    <nav class="flex navbar navbar-dark bg-warning text-white">
      <a href="/" class="justify-start">
        <h1>Auto Auction</h1>
      </a>
      {{#if user}}
        <a href="/create" class="justify-center">
          <h2>Click here to submit an item for auction</h2>
        </a>
      {{/if}}
      <div class="justify-end">
      {{#if user}}
        <form action="/logout" method="POST" id="logout">
          <input type="submit" value="Logout">
        </form>
      {{else}}
        <a href="/signup" class="mr-4">Sign Up</a>
        <a href="/login">Login</a>
      {{/if}}
      </div>
    </nav>
    <div class="container">
      {{{body}}}
    </div>
    
    {{#if user}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <script src="/js/app.js"></script>
  </body>
</html>